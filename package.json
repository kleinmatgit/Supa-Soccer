{
  "name": "supa-soccer",
  "version": "1.0.0",
  "description": "Soccer results React application",
  "main": "lib/server.js",
  "repository": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "set NODE_PATH=./lib&& nodemon --exec babel-node lib/server.js",
    "dev-mac": "NODE_PATH=./lib pm2 start lib/server.js --watch --interpreter babel-node --name appDev",
    "webpack": "webpack -wd",
    "test": "set NODE_PATH=./lib&& jest --watch",
    "verify-tests": "set NODE_PATH=./lib&& jest --coverage",
    "build-webpack": "webpack -p",
    "build-node": "babel lib -d build --copy-files",
    "start-prod": "NODE_ENV=production NODE_PATH=./build pm2 start build/server.js -i max --name appProd"
  },
  "babel": {
    "presets": [
      "react",
      ["env", {"targets": { "node": "current"} }]
    ],
    "plugins": [
      "transform-class-properties",
      "transform-object-rest-spread"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "css-loader": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "jest": "^23.6.0",
    "react-test-renderer": "^16.5.2",
    "style-loader": "^0.23.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bootstrap": "^4.1.3",
    "ejs": "^2.5.6",
    "express": "^4.15.2",
    "jquery": "^3.3.1",
    "nodemon": "^1.18.2",
    "prop-types": "^15.6.2",
    "react": "^16.0.0",
    "react-bootstrap": "^0.32.3",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-thunk": "^2.3.0",
    "request": "^2.87.0",
    "toastr": "^2.1.4",
    "webpack": "^3.0.0"
  }
}
